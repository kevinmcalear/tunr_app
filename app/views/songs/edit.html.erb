<form class="form"  action="/artists/<%=@artist.id %>/songs/<%=@song.id %>" method="POST">

<div class="top">
  <h1>Edit This Song</h1>
  <a href="/artists/<%=@artist.id %>">Go Back</a>
</div>
<br>
  <input type="hidden" name="_method" value="patch">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <label>
    <input class="input" type="text" name="title" value="<%= @song.title %>" />
  </label>
  <p>
  <label>
    <input  class="input" type="integer" name="year" value="<%= @song.year %>" />
  </label>
  </p>  
  <button class="button">Update Song</button>
</form>